{
  "manifest_version": 3,
  "name": "Timesheet",
  "version": "1.0.0",
  "description": "Extension for tracking and organizing work sessions",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Timesheet Extension"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://*.mongodb.net/*", "https://*.vercel.app/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://*.mongodb.net https://*.vercel.app"
  }
}
